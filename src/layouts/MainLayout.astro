---
import Footer2 from "../components/Footer2.astro"
import Nav from "../components/Nav.astro"

import "../css/style.css"
import {SITE_TITLE, SITE_DESCRIPTION} from '../constants.ts';
import Call from "../components/call.astro";
import Whatsapp from "../components/whatsapp.astro";
// import { ViewTransitions } from "astro:transitions";
interface Props {
	title?: string;
	description?: string;
	image?: string
}

const { title, 
description="iRisk Management is a wholly owned Ghanaian Insurance Brokerage and Risk Management consultancy firm incorporated in the year 2014. We obtained our license to operate as an insurance brokerage firm in 2017. With the widespread litigation between insurance beneficiaries and insurance firms, the company was established to foresee several services in insurance with a high sense of professionalism.", 
image="/images/band.jpg" } = Astro.props;
---


<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={SITE_DESCRIPTION} />
		<meta name="viewport" content="width=device-width" />
		<!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
		<meta name="generator" content={Astro.generator} />
		<meta property="og:image" content={image}>
		<title>{title}</title>


		<!-- Favicons -->
		<link rel="apple-touch-icon" sizes="180x180" href="/assets/favicons/apple-touch-icon.png">
		<link rel="icon" type="image/png" sizes="32x32" href="/assets/favicons/favicon-32x32.png">
		<link rel="icon" type="image/png" sizes="16x16" href="/assets/favicons/favicon-16x16.png">
		<link rel="manifest" href="/assets/favicons/site.webmanifest">

		<!-- Google Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Dela+Gothic+One&display=swap" rel="stylesheet">
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Candal&display=swap" rel="stylesheet">

		<!-- Main Stylesheet -->
		<link rel="stylesheet" href="./../css/style.css">

		<!-- Flowbite -->
		<link rel="stylesheet" href="https://unpkg.com/flowbite@1.4.0/dist/flowbite.min.css">

		<!-- Font-awesome CDN -->
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
		
		<!-- Slick Carousels -->
		<link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/gh/kenwheeler/slick@1.8.1/slick/slick.css"/>
		<!-- Add the slick-theme.css if you want default styling -->
		<!-- <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/gh/kenwheeler/slick@1.8.1/slick/slick-theme.css"/> -->
		
		<!-- AOS Stylesheet -->
		<link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />

		<!-- Odometer CSS -->
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/odometer.js/0.4.7/themes/odometer-theme-default.min.css" integrity="sha512-/k/mL9TQSZHAqtVqXJAiy5bt2w1P7gxdra0UlnFjVHF9a/LC2vxt7otx3BMcn79V/DZsPRwdw8tPlwbElMnIAw==" crossorigin="anonymous" referrerpolicy="no-referrer" />

		<!-- Neltlify Widget -->
		<script defer src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
		<!-- End of Netlify Widget -->

	</head>
	<body class="">
		
		
		<!-- Side navigation -->
		<Nav />


		<!-- ===================== Main Section ====================== -->
		<slot class=""/>



		<!----------- SECTION Call ------------>
		<Call/>


		<!----------- SECTION Call ------------>
		<Whatsapp/>

		<!-- Footer -->
		<Footer2 />

		<!-- Main Javascript file -->
		<script src="./../js/main.js"></script>
		<script src="../../node_modules/flowbite/dist/flowbite.js"></script>

		<!-- Flowbite JS -->
		<script src="https://unpkg.com/flowbite@1.4.0/dist/flowbite.js"></script>

		<!-- importing Gsap  -->
		<script src="./../js/gsap.js"></script>

		<!-- Slick Carousel -->
		<script type="text/javascript" src="//code.jquery.com/jquery-1.11.0.min.js"></script>
		<script type="text/javascript" src="//code.jquery.com/jquery-migrate-1.2.1.min.js"></script>
		<script type="text/javascript" src="//cdn.jsdelivr.net/gh/kenwheeler/slick@1.8.1/slick/slick.min.js"></script>

		<script src="./../js/slick.js"></script>


		<!-- Preloader Javascript -->
		<!-- <script src="./../js/preloader.js"></script> -->

		<!-- Call us -->
		<script src="./../js/Call.js"></script>

		  <!-- AUTOTYPE EFFECTS -->
		  <script src="./../js/autotype.js"></script>

		  <!-- importing AOS -->
		<script src="./../js/aos.js"></script>

		<!-- Odometer JS -->
		<script src="https://cdnjs.cloudflare.com/ajax/libs/odometer.js/0.4.7/odometer.min.js" integrity="sha512-v3fZyWIk7kh9yGNQZf1SnSjIxjAKsYbg6UQ+B+QxAZqJQLrN3jMjrdNwcxV6tis6S0s1xyVDZrDz9UoRLfRpWw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

		<script src="./../js/odometer.js"></script>
		
	</body>
</html>


