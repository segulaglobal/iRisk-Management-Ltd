<style lang="scss">

    // logo
    .logo {
        width: 80px;
    } //End of Logo


    // nav button
    .nav-btn {
        cursor: pointer;
        transition: .4s;
        opacity: 1;
        width: 3rem;
        height: 3rem;
        border-radius: .5rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        margin-left: 1rem;
        
        .lines {
            width: 2rem;
            height: .2rem;
            background-color: var(--clr-gray);
            border-radius: 2px;

            &:not(:last-child) {
                margin-bottom: .3rem;
            }
        }

        &.close {
            transform: rotate(180deg);

            .lines {

                &:nth-child(1) {
                    transform: translate(1px, 8px) rotate(-45deg);
                }
                &:nth-child(2) {
                    opacity: 0;
                }
                &:nth-child(3) {
                    transform: translate(0px, -8px) rotate(45deg);
                }
            }
        }
    }// End of Menu button


    // ========== Navigation Overlay ===========
    .nav-overlay {
        width: 100%;
        height: 100%;
        position: fixed;
        top: 0;
        left: 0;
        z-index: 50;
        background-color: rgba(60, 60, 60, 0.537);
        transition: .2s;
        opacity: 0;
        pointer-events: none;

        &.show {
            opacity: 1;
            pointer-events: initial;
        }
    }
    .nav {
        position: fixed;
        top: 3rem;
        left: 0;
        z-index: 51;
        width: 100%;
        height: auto;
    }
    .nav-container {
        // --container-width: 91.875rem;
        --gutter: 12.5rem;
        width: min(100% - var(--gutter)*2, var(--container-width, none));
        margin-left: auto;
        margin-right: auto;
        background-color: red;
        width: 100%;
    }


    // =========== Nav Bar =============
    .nav-bar {
        background-color: var(--clr-white);
        border-radius: 5rem;
        box-shadow: 0px 4px 5px 2px rgba(0, 8, 41, 0.2);
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding-inline: 2rem;
        width: 100%;
    }










//////////////////////////////////////////////////
//               Media Querries 
//////////////////////////////////////////////////
@media screen and (max-width: 1019px) {

    .nav-bar {
        height: 80px;
        position: relative;



        .nav-list {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            max-height: calc(100vh - 10rem);
            z-index: -1;
            background-color: rgba(255, 255, 255, 1);
            border-radius: 2.5rem;
            padding-top: 120px;
            padding-inline: 3rem;
            padding-bottom: 2rem;;
            overflow-y: scroll;
            transition: all .4s ease-in-out;
            transform: translate3d(-00%, -100%, 0);
            opacity: 0;

            &.show {
                transform: translate3d(00%, 0, 0);
                opacity: 1;
            }
        }

        .nav-item {
            list-style: none;

            &:not(:last-child) {
                margin-bottom: .5rem;
            }
        }
        .nav-link {
            display: inline-block;
            padding: 1rem 3rem;
            text-transform: uppercase;
            font-size: 1rem;
            outline: none;
            border: none;
            cursor: pointer;
            font-family: inherit;
            box-sizing: inherit;
            margin: 0;
            line-height: 2;
            font-weight: bold;
            transition: all .3s ease-in-out;
            background-image: linear-gradient(60deg, transparent 0%, transparent 50%, var(--clr-blue-light) 50%);
            // background-position: 0px;
            background-size: 230%;
            

                &:hover {
                    transform: translatex(10px);
                    color: var(--clr-white);
                    background-position: 100%;
                }
        }
        // =============== Drop down ===========
        .dropdown {
            position: relative;
            
            &.active > .dropdown-menu {
                opacity: 1;
                transform: translateY(0);
                pointer-events: auto;
                display: block;
            }

            &-menu {
                display: none;
                width: 100%;
                transform: translateY(-5px);
                padding: 2rem 3rem;
                border-radius: 1rem;
                transition: .4s ease-in-out;
                pointer-events: none;

                h2 {
                    line-height: 1.5;
                }
                .dropdown-list {
                    list-style: none;

                    li {

                        &:not(:last-child) {
                            margin-bottom: 1rem;
                        }
                    }
                    a {
                        display: flex;
                        align-items: center;
                        color: var(--clr-black);

                        i {
                            font-size: 1rem;
                            display: flex;
                            width: 2.5rem;
                            height: 2.5rem;
                            border-radius: 50%;
                            border: 2px solid var(--clr-yellow);
                            align-items: center;
                            justify-content: center;
                            color: var(--clr-yellow);
                            margin-left: 2rem;
                            transition: .4s;
                        }

                        &:hover i {
                            transform: translateX(10px);
                        }
                    }
                }

                .col-2 {
                    gap: 5rem;
                }
            }
        }
    }

    .logo {
        width: 80px; 
    }

}

// smartphones
@media screen and (max-width: 768px) {


    .nav-bar {

        .dropdown {

            &-menu {
                
                h2 {
                    font-size: 1.8rem;
                }
            }
        }
    }
}


@media screen and (min-width: 1020px) {
    .nav-bar {
        padding-block: 1rem;
        padding-inline: 2rem;
        position: relative;

        .nav-btn {
            display: none;
        }


        // Nav-menu
        .nav-list {
            list-style: none;
            display: flex;
            height: 100%;
            align-items: center;
        
            .nav-item {
                
                &:last-child {
                    // margin-left: 2rem;
                }
            }
            .nav-link {
                display: flex;
                padding: 1rem .7rem;
                text-transform: uppercase;
                font-size: .9rem;
                outline: none;
                background-color: transparent;
                border: none;
                cursor: pointer;
                font-family: inherit;
                box-sizing: inherit;
                margin: 0;
                line-height: 2;
                font-family: inherit;
                font-weight: bold;
                transition: .3s ease-in-out;

                svg {
                    transition: .4s;
                }

                &:hover svg {
                    transform: translateY(4px);
                }

                &:hover {
                    transform: scale(1.03) translateY(2px);
                    color: var(--clr-blue-light);
                }
            }
        
            // =============== Drop down ===========
            .dropdown {
                // position: relative;
                // width: 100%;
                
                &.active > .dropdown-menu {
                    opacity: 1;
                    // transform: translateY(0);
                    pointer-events: auto;
                }
        
                &-menu {
                    width: 100%;
                    position: absolute;
                    background-color: var(--clr-white);
                    top: 00%;
                    left: 0;
                    z-index: -1;
                    padding: 5rem;
                    padding-top: 10rem;
                    border-radius: 3rem;
                    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.149);
                    opacity: 0;
                    // transform: translateY(-100px);
                    transition: .4s ease-in-out;
                    pointer-events: none;
        
                    h2 {
                        line-height: 1.5;
                    }
                    .dropdown-list {
                        list-style: none;
        
                        li {
        
                            &:not(:last-child) {
                                margin-bottom: 1rem;
                            }
                        }
                        a {
                            display: flex;
                            align-items: center;
                            color: var(--clr-black);
        
                            i {
                                font-size: 1rem;
                                display: flex;
                                width: 2.5rem;
                                height: 2.5rem;
                                border-radius: 50%;
                                border: 2px solid var(--clr-yellow);
                                align-items: center;
                                justify-content: center;
                                color: var(--clr-yellow);
                                margin-left: 2rem;
                                transition: .4s;
                            }
        
                            &:hover i {
                                transform: translateX(10px);
                            }
                        }
                    }
        
                    .col-2 {
                        gap: 10rem;
                    }
                }
            }
        }
    }    
}

// Remove shadows when dropdown 
.no-shadow {
    box-shadow: none;
}
</style>
