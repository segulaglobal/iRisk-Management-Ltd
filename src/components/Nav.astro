<!-- ====================================================================
                            Styling
=========================================================================-->
  <style lang="scss">
    // logo
    .logo {
      width: 80px;
      transition: 0.5s ease-in-out;
      margin-right: 4px;
    } //End of Logo

    .logo:hover {
        transform: scale(1.2); /* decrease size on hover  */
        transition: 0.5s ease-in-out;
    }

    // nav button
    .nav-btn {
      cursor: pointer;
      transition: 0.4s;
      opacity: 1;
      width: 3rem;
      height: 3rem;
      border-radius: 0.5rem;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      margin-left: 1rem;

      .lines {
        width: 2rem;
        height: 0.2rem;
        background-color: var(--clr-gray);
        border-radius: 2px;


        &:not(:last-child) {
          margin-bottom: 0.3rem;
        }
      }

      &.close {
        transform: rotate(180deg);

        .lines {
          &:nth-child(1) {
            transform: translate(1px, 8px) rotate(-45deg);
          }
          &:nth-child(2) {
            opacity: 0;
          }
          &:nth-child(3) {
            transform: translate(0px, -8px) rotate(45deg);
          }
        }
      }
    } // End of Menu button

    // ========== Navigation Overlay ===========
    .nav-overlay {
      width: 100%;
      height: 100%;
      position: fixed;
      top: 0;
      left: 0;
      z-index: 50;
      background-color: rgba(60, 60, 60, 0.537);
      transition: 0.2s;
      opacity: 0;
      pointer-events: none;

      &.show {
        opacity: 1;
        pointer-events: initial;
      }
    }
    .nav {
      position: fixed;
    //   top: 3rem;
      left: 0;
      z-index: 51;
      width: 100%;
      height: auto;
      background-color: var(--clr-white);
     
      //box-shadow: 0px 2px 2px rgba(0, 8, 41, 0.1);
      transition: .4s;
    
      font-family: 'Roboto', sans-serif;

      &.hide {
        transform: translateY(-100%);
      }
    }
    .nav-container {
      // --container-width: 91.875rem;
      --gutter: 12.5rem;
      width: min(100% - var(--gutter) * 2, var(--container-width, none));
      margin-left: auto;
      margin-right: auto;
    //   background-color: red;
      width: 100%;
     
    }




    // =========== Nav Bar =============
    .nav-bar {
        // background-color: var(--clr-white);
        // border-radius: 5rem;
        // box-shadow: 0px 2px 2px rgba(0, 8, 41, 0.1);
        display: flex;
        align-items: center;
        justify-content: space-between;
        // padding-inline: 2rem;
        width: 100%;
        


        
    }










//////////////////////////////////////////////////
//               Media Querries
//////////////////////////////////////////////////
@media screen and (max-width: 1019px) {

    .nav-bar {
        height: 80px;


        .nav-list {
            position: fixed;
            top: 0;
            left: 0;
            width: 80vw;
            max-width: 600px;
            height: 100vh;
            background-color: rgba(255, 255, 255, 1);
            z-index: -1;
            padding-top: 150px;
            padding-inline: 3rem;
            overflow-y: scroll;
            transition: transform .4s ease-in-out;
            transform: translate3d(-100%, 0, 0);

            &.show {
                transform: translate3d(00%, 0, 0);
            }
        }

        .nav-item {
            list-style: none;
            &:not(:last-child) {
                margin-bottom: .5rem;
                
            }
        }
        .nav-link {
            display: inline-block;
            padding: 1rem;
            text-transform: uppercase;
            font-size: 1rem;
            outline: none;
            background-color: transparent;
            border: none;
            cursor: pointer;
            font-family: inherit;
            box-sizing: inherit;
            // margin: 0;
            font-weight: bold;
            transition: .3s ease-in-out;

            &:hover {
                transform: scale(1.1) translatex(15px);
                color: var(--clr-blue-light);
            }
        }
      
        // =============== Drop down ===========
        .dropdown {
            position: relative;
            
            &.active > .dropdown-menu {
                opacity: 1;
                transform: translateY(0);
                pointer-events: auto;
                display: block;
            }

            &-menu {
                display: none;
                width: 100%;
                transform: translateY(-5px);
                padding: 1rem 3rem;
                border-radius: 1rem;
                transition: .4s ease-in-out;
                pointer-events: none;
                
                ul li {
                    list-style: none;

                    &:not(:last-child) {
                        margin-bottom: .5rem;
                    }

                    a {
                        display: inline-block;
                        transition: .3s;
                        color: var(--clr-blue-dark);
                        font-weight: bold;

                        &:hover, 
                        &:focus {
                            transform: translateX(5px);
                            color: var(--clr-blue-light);
                        }
                    }

                }

                .more:hover .more-sub-menu {
                    display: block;;
                }

                .more-sub-menu {
                    padding-left: 2rem;
                    padding-top: 1rem;
                    display: none;
                }

            }
        }
    }

    .logo {
        width: 80px; 
    }

}

// Tablets
@media screen and (max-width: 768px) {
    .nav-bar {

        .dropdown {

            &-menu {
                
                h2 {
                    font-size: 1.8rem;
                }
            }
        }
    }
}

// SmartPhones
@media screen and (max-width: 500px) {
    .logo {
    width: 60px;
    }
}





    // Desktop Navigation done
