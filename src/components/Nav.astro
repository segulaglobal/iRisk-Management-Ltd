                    }

                }
                
                // Navigation Main Link
                .nav-link {
                    display: flex;
                    padding: 0.9rem 0.7rem;
                    text-transform: uppercase;
                    font-size: 0.75rem;
                    outline: none;
                    background-color: transparent;
                    border: none;
                    cursor: pointer;
                    font-family: inherit;
                    box-sizing: inherit;
                    margin-left: 0.5em;
                    line-height: 2;
                    font-family: inherit;
                    font-weight: bold;
                    transition: 0.3s ease-in-out;
                    white-space: nowrap;
                    color: #042D44;
                    

                    .fa {
                        line-height: 1;
                        
                    }

                    &:hover svg {
                    transform: translateY(4px);
                    }

                    &:hover {
                    transform: scale(1.03) translateY(2px);
                    color: #f7df40;
                    }
                }



                li[data-dropdown]:hover .dropdown-menu {
                    display: block;
                    opacity: 1;
                    pointer-events: auto;
                }

                // =============== Drop down ===========
                .dropdown {
                    // position: relative;
                    // width: 100%;

                    &.active > .dropdown-menu {
                    opacity: 1;
                    // transform: translateY(0);
                    pointer-events: auto;
                    }

                    &-menu {
                        position: absolute;
                        color: #c0d9e8;
                        left: 0;
                        opacity: 0;
                        transition: 0.2s ease-in-out;
                        pointer-events: none;
                        top: 60px;
                        line-height: 40px;
                        box-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
                        border-radius: 0 0 4px 4px;
                        // display: none;
                        z-index: 2;
                        // padding-top: 2rem;

                        .more-sub-menu{
                            position: absolute;
                            top: 0;
                            left: 100%;
                            border-radius: 0 4px 4px 4px;
                            z-index: 1;
                            display: none;
                            padding-top: 0rem;
                        }
                        .more:hover .more-sub-menu{
                            display: block;
                            background-color: rgba(4, 8, 23, 0.763);
                            color: #e2e9ee;
                        }
                    
                    }

                }


            }

        }
    }












    // Remove shadows when dropdown
    .no-shadow {
      box-shadow: none;
    }


    @keyframes changeColor {
    0% {
      background-color: rgb(37, 233, 217);
    }
    25% {
      background-color: rgb(210, 227, 239);
    }
    50% {
      background-color: rgb(244, 242, 207);
    }
    75% {
      background-color: rgb(247, 184, 184);
    }
    100% {
      background-color: rgb(172, 164, 239); /* Back to the initial color */
    }
  }
