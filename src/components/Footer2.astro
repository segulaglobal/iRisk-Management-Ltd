<style lang="scss">




.section-footer {
    

////////////////////////////////////////////////////////////////////////////////////////
/// Section 1 
/// /////////////////////////////////////////////////////////////////////////////////
    .section-1 {
        background-color: #222222;
        padding: 5rem 0;

        h3 {
            font-size: 1.5rem;
            font-weight: bold;
            color: #D9D9D9;
        }

        .nav-list {
            li {
            }
            a {
                color: #D9D9D9;
                transition: .2s ease-out;
                text-decoration: none;
                display: inline-block;
                margin-bottom: .5rem;

                &:hover,
                &:focus {
                    color: var(--clr-blue-light);
                    scale: 1.1;
                    transform: translateX(5px);
                }
            }
        }
    }



    .footer-logo {
        width: 120px;
        margin-bottom: 1rem;
    }
    /* Social Media Ions */
    .social-list {
        width: 100%;
        display: flex;
        list-style: none;
        align-items: center;
        margin-bottom: 1rem;
        // justify-content: center;

        .social-item {

            &:not(:last-child) {
                margin-right: .5rem;
            }
        }

        .social-link {
            display: flex;
            width: 3rem;
            height: 3rem;
            border: 2px solid #fff;
            color: #fff;
            border-radius: 50%;
            align-items: center;
            justify-content: center;
            position: relative;
            z-index: 1;
            transition: .3s;
            overflow: hidden;

            &:hover {
                color: #222222;
            }

            &:hover::after {
                transform: scale(1);
                transform-origin: center;
                opacity: 1;
            }

            &::after {
                content: "";
                width: 100%;
                height: 100%;
                border-radius: 50%;
                background-color: var(--clr-white);
                position: absolute;
                top: 0;
                left: 0;
                z-index: -1;
                transform: scale(0);
                transform-origin: center;
                transition: .3s ease-in-out;
                opacity: 0;
            }
        }
    }




    ////////////////////////////////////////////////////////////////////////////////////////
/// Section 2
/// /////////////////////////////////////////////////////////////////////////////////

.section-2 {
    background-color: #131313;
    color: #686666;
    text-align: center;
    padding: 1rem 0;
    font-size: .9rem;

    a {
        display: inline-block;
        transition: .4s;

        &:hover,
        &:focus {
            color: var(--clr-blue-light);
            transform: translateY(-5px) scale(1.1);
        }
    }
}
}
