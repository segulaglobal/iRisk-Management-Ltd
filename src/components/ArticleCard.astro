---
import { formatDate } from '../utils';
import type { CollectionEntry } from "astro:content";

const { article } = Astro.props;

interface Props {
    article: CollectionEntry<'blog'>;
}
---


<div class="">
    <div class="bg-white rounded-lg overflow-hidden shadow-lg">
    <a href={'/article/' + article.slug}>
        <img
        src={'/assets/' + article.data.image}
        alt="Article Image"
        class="w-full h-48 object-cover hover:opacity-75 transition duration-300 ease-in-out"
        />
    </a>
    <div class="p-6">
        <h2 class="text-2xl font-semibold mb-2">
        <a href={'/article/' + article.slug}> {article.data.title}</a>
        </h2>
        <p class="text-gray-600 text-sm mb-4">{formatDate(article.data.pubDate)}</p>
        <div class="flex flex-wrap gap-2">
        {article.data.tags.map((tag: string, index: number) => (
            <span class={index % 2 === 0 ? "px-2 py-1 bg-blue-500 text-white rounded-full text-xs hover:opacity-90" : "px-2 py-1 bg-purple-500 text-white rounded-full text-xs hover:opacity-90"}>
                <a href={'/article/tags/' + tag}> {tag} </a>
                </span>
        ))}
        </div>
    </div>
    </div>
</div>