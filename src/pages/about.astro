<style lang="scss">

// =================== About hero =========================
.about-hero {
    background-image: linear-gradient(
        to bottom,
        rgba(51, 162, 209, 0.95),
        rgba(3, 42, 65, 0.95)
    ),
    url(/assets/coming-soon.jpg);
    background-repeat: no-repeat;
    background-position: center;
    background-size: cover;
    color: var(--clr-white);
}
// End of about hero




// ======================= section life at iRisk =======================
.section-irisklife {
    padding: 10rem 0;
    height: 90vh;
    background-color: red;
    z-index: 1;

    .iRisk-video {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: -2;
    }

    .overlay {
        background-color: rgba(#32A2D1, .9);
        width: 100%;
        height: 100%;
        position: absolute;
        top: 0;
        left: 0;
        z-index: -1;
    }
}
// End of section life at iRisk






// ============================= Section Team ============================
.section-team {

    .team-card {
        padding: 2rem 1rem;
        box-shadow: 0 3px 5px rgba(0, 0, 0, .2);
        border-radius: 1rem;
        text-align: left;
        transition: .4s;
        border: 2px solid transparent;

        &:hover {
            transform: translateY(-4px);
            border: 2px solid var(--clr-blue-light);
        }

        h2 {
            font-size: 1.5rem;
            font-weight: bold;
            margin-bottom: .3rem;
        }
        h3 {
            color: var(--clr-blue-light);
        }


        .line {
            height: 1px;
            background-color: var(--clr-blue-light);
            width: 5rem;
            border-radius: 2px;
            margin: 2rem 0;
        }
    }

    .team-list {
        width: 100%;
        display: flex;
        list-style: none;
        align-items: center;

        .team-item {
            &:not(:last-child) {
                margin-right: 1rem;
            }
        }
        .team-link {
            display: flex;
            width: 3rem;
            height: 3rem;
            border: 2px solid var(--clr-gray-light);
            border-radius: 50%;
            align-items: center;
            justify-content: center;
            position: relative;
            z-index: 1;
            transition: .3s;
            overflow: hidden;

            &:hover {
                color: var(--clr-white);
            }

            &:hover::after {
                transform: scale(1);
                transform-origin: center;
                opacity: 1;
            }

            &::after {
                content: "";
                width: 100%;
                height: 100%;
                border-radius: 50%;
                background-color: var(--clr-gray-dark);
                position: absolute;
                top: 0;
                left: 0;
                z-index: -1;
                transform: scale(0);
                transform-origin: center;
                transition: .3s ease-in-out;
                opacity: 0;
            }
        }
    }
}
// End of section team

