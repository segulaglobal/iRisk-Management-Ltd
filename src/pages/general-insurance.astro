---
import MainLayout from "../layouts/MainLayout.astro";
import ProductHero from "../components/ProductHero.astro";

// images
import { Image } from 'astro:assets';
import MotorInsurance from "../assets/motor-service.png";
import PropertyInsurance from "../assets/property-insurance.jpg";
import MarineInsurance from "../assets/marine-insurance.png";
import BondInsurance from "../assets/bond-insurance.png";
import EngineerInsurance from "../assets/engineer-insurance.png";
import LiabilityInsurance from "../assets/liability-insurance.png";
---





<MainLayout title="General Insurance">
<ProductHero>
    <h2 class="heading-secondary">General Insurance</h2>

        <!-- Bread crumbs -->
        <nav class="flex w-full justify-center mt-12" aria-label="Breadcrumb">
            <ol class="inline-flex items-center space-x-1 md:space-x-2 rtl:space-x-reverse">
                <li class="inline-flex items-center">
                    <a href="/" class="inline-flex items-center text-sm font-medium text-gray-700 hover:text-blue-600 dark:text-gray-400 dark:hover:text-white">
                    <svg class="w-3 h-3 me-2.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                        <path d="m19.707 9.293-2-2-7-7a1 1 0 0 0-1.414 0l-7 7-2 2a1 1 0 0 0 1.414 1.414L2 10.414V18a2 2 0 0 0 2 2h3a1 1 0 0 0 1-1v-4a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v4a1 1 0 0 0 1 1h3a2 2 0 0 0 2-2v-7.586l.293.293a1 1 0 0 0 1.414-1.414Z"/>
                    </svg>
                    Home
                    </a>
                </li>
                
                <li aria-current="page">
                    <div class="flex items-center">
                    <svg class="rtl:rotate-180 w-3 h-3 text-gray-400 mx-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
                    </svg>
                    <span class="ms-1 text-sm font-medium text-gray-500 md:ms-2 dark:text-gray-400">General Insurance</span>
                    </div>
                </li>
            </ol>
        </nav>
        <!-- End of Bread crumbs -->
</ProductHero>



<section class="pt-20">
    <div class="container wrapper">
        <p class="leading-9 prose-lg">Over time, the Ghanaian insurance industry has evolved heavily and draws inspiration from several countries, England in particular.
            In 1989, The National Insurance Commission (NIC) was constituted as an autonomous body to regulate and develop the insurance industry. </p>
    </div>
</section>

<!-- General Insurance carousel -->
<section class="py-20 pb-40">
    <div class="container wrapper">
        <h2 class="heading-tertiary text-center mb-16">Our Products</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">

            <!-- Motor Insurance -->
            <a href="/motor-insurance" class="product gap-4 items-center grid grid-cols-2">
                <div>
                    <h1>Motor Insurance</h1>
                </div>
                <div>
                    <Image src={MotorInsurance} alt="Motor Insurance" />
                </div>
            </a>
            <!-- End of Motor Insurance -->


            <!-- Engineer Insurance -->
            <a href="/engineer-insurance" class="product gap-4 items-center grid grid-cols-2">
                <div>
                    <h1>Engineer Insurance</h1>
                </div>
                <div>
                    <Image src={EngineerInsurance} alt="Engineer Insurance" />
                </div>
            </a>
            <!-- End of Engineer Insurance -->


            <!-- Property Insurance -->
            <a href="/property-insurance" class="product gap-4 items-center grid grid-cols-2">
                <div>
                    <h1>Property Insurance</h1>
                </div>
                <div>
                    <Image src={PropertyInsurance} alt="property Insurance" />
                </div>
            </a>
            <!-- End of Property Insurance -->


            <!-- Bond Insurance -->
            <a href="/bond-insurance" class="product gap-4 items-center grid grid-cols-2">
                <div>
                    <h1>Bond Insurance</h1>
                </div>
                <div>
                    <Image src={BondInsurance} alt="bond Insurance" />
                </div>
            </a>
            <!-- End of Bond Insurance -->


            <!-- Marine Insurance -->
            <a href="/marine-insurance" class="product gap-4 items-center grid grid-cols-2">
                <div>
                    <h1>Marine Insurance</h1>
                </div>
                <div>
                    <Image src={MarineInsurance} alt="marine Insurance" />
                </div>
            </a>
            <!-- End of Marine Insurance -->
            
            
            <!-- Liability Insurance -->
            <a href="/liability-insurance" class="product gap-4 items-center grid grid-cols-2">
                <div>
                    <h1 class="prose prose-lead:{utility}">Liability Insurance</h1>
                </div>
                <div>
                    <Image src={LiabilityInsurance} alt="liability Insurance" />
                </div>
            </a>
            <!-- End of Liability Insurance -->

        </div>
    </div>
</section>

</MainLayout>






<style lang="scss">




    // Section Products cards
    .product {
        padding: 2rem 1rem;
        background-image: linear-gradient(to right, var(--clr-blue-light), var(--clr-blue-dark));
        border-radius: 1rem;
        transition: .4s;
        box-shadow: 0 2px 5px rgba(0, 0, 0, .4);

        &:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 20px rgba(0, 0, 0, .1);
        }

        h1 {
            color: #fff;
            font-weight: bold;
            font-size: 1.5rem;
            line-height: 1;
        }
    }
</style>